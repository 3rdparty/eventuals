load("@rules_cc//cc:defs.bzl", "cc_library")

windows_deps = [
    "@com_github_google_glog//:glog",
    "@com_github_libuv_libuv//:libuv",
    "@com_github_curl_curl//:libcurl",
]

#Currently, jemalloc is available for Linux only
linux_deps = [
    "@com_github_google_glog//:glog",
    "@com_github_libuv_libuv//:libuv",
    "@com_github_jemalloc_jemalloc//:jemalloc",
]

macos_deps = [
    "@com_github_google_glog//:glog",
    "@com_github_libuv_libuv//:libuv",
]

cc_library(
    name = "eventuals",
    srcs = [
        "stout/scheduler.cc",
        "stout/static-thread-pool.cc",
    ],
    hdrs = [
        "stout/callback.h",
        "stout/catch.h",
        "stout/closure.h",
        "stout/compose.h",
        "stout/conditional.h",
        "stout/context.h",
        "stout/eventual.h",
        "stout/interrupt.h",
        "stout/just.h",
        "stout/lambda.h",
        "stout/lock.h",
        "stout/loop.h",
        "stout/map.h",
        "stout/raise.h",
        "stout/reduce.h",
        "stout/repeat.h",
        "stout/scheduler.h",
        "stout/semaphore.h",
        "stout/sequence.h",
        "stout/static-thread-pool.h",
        "stout/stream.h",
        "stout/task.h",
        "stout/terminal.h",
        "stout/then.h",
        "stout/type-traits.h",
        "stout/undefined.h",
        "stout/until.h",
    ],
    visibility = ["//visibility:public"],
    deps = select({
        "@bazel_tools//src/conditions:windows": windows_deps,
        "@bazel_tools//src/conditions:darwin": macos_deps,
        "//conditions:default": linux_deps,
    }),
)
